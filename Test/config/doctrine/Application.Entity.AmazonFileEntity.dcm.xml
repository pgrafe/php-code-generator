<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Entity\AmazonFileEntity" table="amazon__file">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="dirname" type="string" length="255"/>
        <field name="basename" type="string" length="255"/>
        <field name="extension" type="string" length="4"/>
        <field name="status" type="smallint"/>
        <field name="file_name" type="string" length="255"/>
        <field name="file_name_md5" type="string" length="32" unique="true"/>
        <field name="file_date_time" type="datetime" nullable="true">
            <options>
                <option name="comment">Dateidatum. Bei Bildern direkt aus Exif!</option>
            </options>
        </field>
        <field name="file_size" type="integer" nullable="true">
            <options>
                <option name="comment">Dateigröße.</option>
                <option name="unsigned">true</option>
            </options>
        </field>
        <field name="file_md5" type="string" length="32" unique="true" nullable="true">
            <options>
                <option name="comment">MD5 Hash der Datei</option>
            </options>
        </field>
        <field name="exif_data" type="array">
            <options>
                <option name="comment">EXIF Daten, wenn diese gelesen werden konnten</option>
                <option name="default">[]</option>
            </options>
        </field>
    </entity>
</doctrine-mapping>